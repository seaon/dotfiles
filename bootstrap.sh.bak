#!/usr/bin/env bash

ROOTDIR=$HOME/.local

read -p "This will remove existing files in ~/.local directory. Are you sure? (y/n) " -n 1
echo ""
if [[ $REPLY =~ ^[Yy]$ ]]; then
    rm -rf $ROOTDIR
else
    echo "Abort"
    exit 1
fi

# create directory
mkdir -p $ROOTDIR
mkdir -p $ROOTDIR/etc
mkdir -p $ROOTDIR/bin

# clone git repository
git clone https://github.com/seaon/dotfiles.git $ROOTDIR/dotfiles
echo "\n"

# initialize
. $ROOTDIR/dotfiles/init.sh